# Encrypt this file with `sops --encrypt` and commit the resulting
# `secrets.sops.yaml` to keep sensitive variables in Git without exposing
# them in clear text.
#
# Usage:
#   cp vps/inventory/group_vars/vps/secrets.sops.yaml.example \
#      vps/inventory/group_vars/vps/secrets.sops.yaml
#   sops --encrypt --in-place vps/inventory/group_vars/vps/secrets.sops.yaml
#   sops vps/inventory/group_vars/vps/secrets.sops.yaml
#
# Populate the keys below with real values before encrypting.
---
overlay_wireguard_private_key: REPLACE_WITH_BASE64_WG_PRIVATE_KEY
overlay_wireguard_preshared_keys:
  edge-peer: REPLACE_WITH_OPTIONAL_PRESHARED_KEY
overlay_keepalived_auth_passphrase: REPLACE_WITH_STRONG_PASSPHRASE
